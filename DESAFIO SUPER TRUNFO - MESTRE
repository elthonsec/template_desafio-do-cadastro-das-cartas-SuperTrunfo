#include <stdio.h>

int main(){
    //Dados da Carta 1
    char letra[1];
    char cdcarta[5];
    char nmcidade[10];
    int população;
    float area;
    float pib;
    int ptrsc;
    float densindade_populacional;
    float pib_per_capta;
    float superpoder;


    //Dados da carta 2
    char letra2[1];
    char cdcarta2[5];
    char nmcidade2[10];
    int populaçao2;
    float area2;
    float pib2;
    int ptrsc2;
    float densindade_populacional2;
    float pib_per_capta2;
    float superpoder2;

    // Entrada de dados Carta 1
    printf("===========================================\n");

    printf("carta1:\n");

    printf("===========================================\n");
    
    printf("Digite uma letra de A a H(representando um dos oito estados):");
    scanf("%s",&letra);

    printf("A letra do estado seguido de um numero de 01 a 04(ex:A01,B03): ");
    scanf("%s",&cdcarta);

    printf("O nome da cidade:");
    scanf("%s",&nmcidade);

    printf("O numero de habitantes da cidade: ");
    scanf("%d",&população);

    printf("A area da cidade em Km2: ");
    scanf("%f",&area);

    printf("O produto interno bruto da cidade em reais: ");
    scanf("%f",&pib);

    // Cálculo densidade populacional e Pib percapta carta 1

    printf("A quantidade de pontos turisticos: ");
    scanf("%d",&ptrsc);
    
    densindade_populacional = (float)população / area;
    pib_per_capta = (float)((pib*1000000000.0)) / população;
    superpoder = (float)população + area + pib + ptrsc + pib_per_capta + (1.0f / densindade_populacional);

    // Entrada dados carta 2

    printf("===========================================\n");

    printf("entrada carta 2\n");

    printf("===========================================\n");

    printf("Digite uma letra de A a H(representando um dos oito estados):");
    scanf("%s",&letra2);

    printf("A letra do estado seguido de um numero de 01 a 04(ex:A01,B04):");
    scanf("%s",&cdcarta2);

    printf("O nome do cidade:");
    scanf("%s",nmcidade2);

    printf("o numero de habitantes da cidade:");
    scanf("%d",&populaçao2);

    printf("A area da cidade em km²:");
    scanf("%f",&area2);
    
    printf("O produto interno bruto da cidade em reais:");
    scanf("%f",&pib2);

    printf("A quantidade de pontos turisticos:");
    scanf("%d",&ptrsc2);

    // Cálculo densidade populacional e Pib percapta carta 2

    densindade_populacional2 = (float)populaçao2 / area2;
    pib_per_capta2 = (float)((pib2*1000000000.0)) / populaçao2;
    superpoder2 = (float)populaçao2 + area2 + pib2 + ptrsc2 + pib_per_capta2 + (1.0f / densindade_populacional2);

    // resultado das cartas

    printf("=============================================\n");

    printf("Carta 1:\nLetra de A a H:%s\nCodigo da carta:%s\nNome da cidade:%s\nPopulacao:%d\nArea Km²:%.2f\nPIb:%.2f\nA quantidade de pontos turisticos:%d\nDensidade populacional:%.2f\nPib per capta:%.2f\n",letra, cdcarta, nmcidade, população, area, pib, ptrsc,densindade_populacional,pib_per_capta);

printf("=============================================\n");

    
    printf("Carta2:\nletra de A a H:%s\nCodigo da carta:%s\nNome da cidade:%s\npopulacao:%d\nArea km²:%.2f\nPIB:%.2f\nA quantidade de pontos turisticos:%d\nDensidade populacional:%.2f\nPib per capta:%.2f\n",letra2,cdcarta2,nmcidade2,populaçao2,area2,pib2,ptrsc2,densindade_populacional2,pib_per_capta2);

    // Comparação das cartas
    printf("\n== COMPARACAO DAS CARTAS ==\n");
    printf("População: Carta 1 venceu(%d)\n", população > populaçao2 ? 1 : 0);
    printf("Area: Carta 1 venceu(%d)\n", area > area2 ? 1 : 0);
    printf("PIB: Carta 1 venceu(%d)\n", pib > pib2 ? 1 : 0);
    printf("Pontos Turisticos: carta 1 venceu(%d)\n", ptrsc > ptrsc2 ? 1 : 0);
    printf("Densidade Populacional: carta 2 venceu(%d)\n", densindade_populacional < densindade_populacional2 ? 0 : 1);
    printf("PIB per capta: Carta 1 venceu(%d)\n", pib > pib2 ? 1 : 0);
    printf("Super Poder: Carta 1 venceu(%d)\n", superpoder > superpoder2 ? 1 : 0);

    return 0;
}
